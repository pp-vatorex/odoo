<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_form" model="ir.ui.view">
        <field name="name">Simple Form</field>
        <field name="type">qweb</field>
        <field name="key">vatorex_custom_form.custom_form</field>
        <field name="arch" type="xml">
            <t name="Simple Form" t-name="vatorex_custom_form.custom_form">
                <form class="form" role="form" action="/simple_form" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <input type="submit" class="btn btn-primary" value="Save Changes"/>
                        </div>
                    </div>

                </form>
            </t>
        </field>
    </record>

</odoo>
