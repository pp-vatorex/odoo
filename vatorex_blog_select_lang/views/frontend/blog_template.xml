<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="index" inherit_id="website_blog.index">
        <xpath expr="//div[@id='wrap']" position="inside">
            <t t-if="not posts">
                <div class="container">
                    <div class="alert alert-warning">
                        There are no posts to display
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
